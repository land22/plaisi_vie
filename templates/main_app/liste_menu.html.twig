{% extends 'base.html.twig' %}

{% block title %}Plaisir vie{% endblock %}

{% block body %}

<h1>Liste de menu</h1>
 
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Boison</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for menu in menus %}
    <tr>
      <td>{{ menu.nom }}</td>
      <td>{{ menu.boisson }}</td>
      <td><img src="{{ asset('images/' ~ menu.image) }}"></td>
      <td>
        {% if menu.valide == 0 %}
        <a class="label label-default" href="{{ path('save_menu',{'id':menu.id})}}">Afficher</a>
      {% else %}
        <a class="label label-primary" href="{{ path('save_menu',{'id':menu.id})}}">Masquer</a>
      {% endif %}

<span class="label label-success">Success</span>
<span class="label label-warning">Warning</span>
<span class="label label-danger">Danger</span>
<span class="label label-info">Info</span></td>
    </tr>
    {% endfor %}
  </tbody>
</table> 
<a href="{{ url('create_menu') }}" class="btn btn-info">Ajouter un menu</a>
{% endblock %}