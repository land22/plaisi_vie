{% extends 'base.html.twig' %}

{% block title %}Plaisir vie{% endblock %}

{% block body %}

<h1>Liste des clients</h1>
 
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Nom & Prénom</th>
      <th>Adresse mail</th>
      <th>Téléphone</th>
      <th>Roles</th>
      <th>Action</th>
    </tr> 
  </thead>
  <tbody>
    {% for user in users %}
    <tr>
      <td>{{ user.nom }}  {{ user.prenom}}</td>
      <td>{{ user.email }}</td>
      <td>{{ user.telephone }}</td>
      <td>{{ user.roles|join(', ') }}</td>
      <td><form action="{{ path('update_user',{'id':user.id})}}" method="post">
        <div class="form-group">
      <label for="select" class="col-lg-2 control-label">Role</label>
      <div class="col-lg-5">
        <select class="form-control" id="select" name="roles">
          <option>ROLE_USER</option>
          <option>ROLE_CAISSIERE</option>
          <option>ROLE_ADMIN</option>
        </select>
        <br>
    </div>
           <button type="submit" class="label label-primary"> modifier le rôle</button>
         </form>
    </tr>
    {% endfor %}
  </tbody>
</table> 
{% endblock %}